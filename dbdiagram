Table Computers {
    ID int [pk]
    Hostname varchar
    LastSeen datetime
    IP varchar
    MAC varchar [unique]
    Status tinyint [not null] //1,2,3 - statusy pending, approved, denied                                
}

Table Templates {
    ID int [pk]
    Name varchar [not null, unique]
    Period varchar [not null] //Cron
    Type int [not null]
    TargetFileType bit [not null]
    Start datetime
    End datetime
    Paused bit [not null]
    Retention int
}

Table Paths {
    ID int [pk]
    TemplateID int [ref: > Templates.ID, not null]
    FTP nvarchar
    Source bit [not null]
    Directory nvarchar [not null]
}

Table Jobs {
    ID int [pk]
    ComputerID int [ref: > Computers.ID, not null]
    TemplateID int [ref: > Templates.ID, not null]
    Active bit
}

Table Log {
    ID int [pk]
    JobID int [ref: > Jobs.ID]
    Type int [not null]
    Date datetime [not null]
    Message nvarchar [not null]
}

Table Accounts {
    ID int [pk]
    Username nvarchar [not null, unique]
    Password nvarchar [not null] //Hashed
    Admin bit [not null]
    Email varchar
    SendReports bit [not null]
    ReportPeriod varchar [not null]
}

Table Sessions {
    Token varchar [pk] //Hashed
    UserID int [ref: > Accounts.ID]
    LastAccess datetime
}

Ref: "Templates"."TargetFileType" - "Accounts"."Username"